extern fn lunite_sys_exit(code: int) -> void
extern fn lunite_sys_system(cmd: string) -> int
extern fn lunite_sys_get_argc() -> int
extern fn lunite_sys_get_arg(i: int) -> string

pub fn exit(code: int) { lunite_sys_exit(code) }
pub fn exec(cmd: string) -> int { lunite_sys_system(cmd) }
pub fn get_argc() -> int { return lunite_sys_get_argc(); }
pub fn get_arg(i: int) -> string { return lunite_sys_get_arg(i); }