{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Lunite",
	"scopeName": "source.lunite",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#types"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#punctuation"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.lunite",
					"match": "//.*$"
				},
				{
					"name": "comment.block.lunite",
					"begin": "/\*",
					"end": "\*/"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.lunite",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.lunite",
					"match": "\\."
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"name": "meta.function.definition.lunite",
					"match": "\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
					"captures": {
						"1": { "name": "keyword.other.fn.lunite" },
						"2": { "name": "entity.name.function.lunite" }
					}
				},
				{
					"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
					"name": "entity.name.function.call.lunite"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "storage.type.primitive.lunite",
					"match": "\\b(Int|Float|Bool|String|Void|int|float|bool|string|void)\\b"
				},
				{
					"name": "entity.name.type.lunite",
					"match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
				},
                {
                    "match": "(?<=:\\\\s*)\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b",
                    "name": "entity.name.type.declaration.lunite"
                }
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.lunite",
					"match": "\\b(if|else|while|for|return|break|continue|when|try|catch|throw|spawn|region|comptime)\\b"
				},
				{
					"name": "keyword.other.lunite",
					"match": "\\b(let|mut|struct|enum|impl|pub|import|as|extern|native|const)\\b"
				},
				{
					"name": "keyword.control.flow.lunite",
					"match": "\\b(match|case|default)\\b"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.hex.lunite",
					"match": "\\b0x[0-9a-fA-F]+\\b"
				},
				{
					"name": "constant.numeric.float.lunite",
					"match": "\\b[0-9]+\\.[0-9]+\\b"
				},
				{
					"name": "constant.numeric.integer.lunite",
					"match": "\\b[0-9]+\\b"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.language.boolean.lunite",
					"match": "\\b(true|false)\\b"
				},
				{
					"name": "constant.language.null.lunite",
					"match": "\\b(null)\\b"
				},
				{
					"name": "variable.language.this.lunite",
					"match": "\\b(this|self)\\b"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"match": "\\b(let|mut)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
					"captures": {
						"1": { "name": "keyword.other.lunite" },
						"2": { "name": "variable.other.declaration.lunite" }
					}
				},
                {
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)(?=\\s*:)",
                    "name": "variable.parameter.lunite"
                }
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.lunite",
					"match": "(\+|\-|\*|/|%|\=|==|!=|<|>|<=|>=|&&|\|\||!|\?|\.|->|=>|::)"
				}
			]
		},
		"punctuation": {
			"patterns": [
				{
					"name": "punctuation.section.block.begin.lunite",
					"match": "\\{"
				},
				{
					"name": "punctuation.section.block.end.lunite",
					"match": "\\}"
				},
				{
					"name": "punctuation.section.parens.begin.lunite",
					"match": "\\("
				},
				{
					"name": "punctuation.section.parens.end.lunite",
					"match": ")"
				},
				{
					"name": "punctuation.section.brackets.begin.lunite",
					"match": "\["
				},
				{
					"name": "punctuation.section.brackets.end.lunite",
					"match": "]"
				},
				{
					"name": "punctuation.terminator.statement.lunite",
					"match": ";"
				},
				{
					"name": "punctuation.separator.comma.lunite",
					"match": ","
				},
				{
					"name": "punctuation.separator.colon.lunite",
					"match": ":"
				}
			]
		}
	}
}