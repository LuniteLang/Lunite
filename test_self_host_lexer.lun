import "std/lexer.lun" as lex
import "std/token.lun" as tok
import "std/io.lun" as io

fn main() -> void {
    let source = "fn main() { return 0; }";
    print("Tokenizing source:");
    print(source);
    
    let l = lex.Lexer.new(source);
    let count = 0;
    let running = true;
    
    while (running) {
        let t = l.next_token();
        count = count + 1;
        when (t.kind) {
            // tok.TokenKind::EOF => {
            //    running = false;
            // }
            else => {}
        }
    }
    
    print("Tokenization complete!");
    print("Total tokens found:");
    lunite_print_int(count);
    print("SUCCESS: Self-hosted Lexer is alive!");
}
